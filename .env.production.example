# Production Firebase Configuration
# Copy this file to .env.production and fill in your values
# DO NOT commit .env.production to version control

# Firebase Config (get from Firebase Console > Project Settings)
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Admin UIDs (comma-separated for multiple admins)
# These users get admin access in the app
VITE_ADMIN_UIDS=uid1,uid2,uid3

# YouTube API (enables embedded video playback in scores)
# Get from: https://console.cloud.google.com/apis/credentials
VITE_YOUTUBE_API_KEY=your-youtube-api-key-here

# Optional: Feature flags (default: true)
# VITE_FEATURE_BATTLE_PASS=true
# VITE_FEATURE_STAFF_MARKETPLACE=true
# VITE_FEATURE_LEAGUES=true
